generator client {
  provider = "prisma-client-js"
  // output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model user {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  // movies    movie[]

  createdAt DateTime @default(now())
}

model movie {
  id        String     @id @default(uuid())
  title     String
  overview  String?
  releaseYear  Int
  genres    String[] @default([])
  runtime   Int?
  posteUrl  String?
  createdBy  String?
  createdAt DateTime @default(now())
  // user      user
}








